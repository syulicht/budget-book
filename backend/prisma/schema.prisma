generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  Budget       Budget[]
  Subscription Subscription[]
}

model Budget {
  id             Int          @id @default(autoincrement())
  date           DateTime
  detail         String
  ExOrIn         Int
  user           User         @relation(fields: [userId], references: [id])
  userId         Int
  type           Type         @relation(fields: [typeId], references: [id])
  typeId         Int
  subscriptionId Int
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
}

model Type {
  id     Int      @id @default(autoincrement())
  name   String
  budget Budget[]
}

model Icon {
  id     Int    @id @default(autoincrement())
  type   String
  iconId Int
}

model Subscription {
  id          Int                   @id @default(autoincrement())
  user        User                  @relation(fields: [userId], references: [id])
  userId      Int
  start       DateTime
  end         DateTime
  budget      Budget[]
  frequency   SubscriptionFrequency @relation(fields: [frequencyId], references: [id])
  frequencyId Int
}

model SubscriptionFrequency {
  id           Int            @id @default(autoincrement())
  frequency    String
  year         Int
  month        Int
  week         Int
  day          Int
  Subscription Subscription[]
}
